---
import NextjsIcon from '../icons/Nextjs.astro';
import TailwindIcon from '../icons/Tailwind.astro';
const TAGS = {
  NEXT: {
    name: 'NextJs',
    class: 'bg-black text-white',
    icon: NextjsIcon,
  },
  TAILWIND: {
    name: 'Tailwind CSS',
    class: 'bg-[#003159] text-white',
    icon: TailwindIcon,
  },
};
const PROJECTS = [
  {
    title: 'TeacherDash - A Dashboard for Teachers',
    description:
      'TeacherDash simplifies classroom management with an easy-to-use dashboard. Track student progress, manage assignments, and enhance communication effortlessly, streamlining the teaching experience.',
    link: 'https://www.google.com/',
    github: 'https://www.google.com/',
    image: '/projects/teacher-dashboard.webp',
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ title, description, link, github, image, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 border border-white/10`}>
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        loading="lazy"
        class="rounded shadow-2xl shadow-white/10 aspect-video"
        src={image}
        alt={`Screenshot of project ${title}`}
      />
    </article>
  ))
}
